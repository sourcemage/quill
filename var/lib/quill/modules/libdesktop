#---
## @Synopsis libdesktop
#---

##
## @Globals BUILD_DTFILE SPELL_NAME DTFILE_MENUENTRY DTFILE_EXEC
## @Globals DTFILE_MENUPATH DTFILE_ICON DTFILE_TERM
query_spell_desktop_file() {
if query "Will you be adding a custom desktop file?" "n"
then
  touch ${QUILL_SPELL_DIR}/${SPELL_NAME}/desktop/${SPELL_NAME}.desktop
  DTFILE_MENUENTRY="${SPELL_NAME}"

  query_msg "Please enter the name of the executable:"
  read "DTFILE_EXEC"

  query_msg "Please enter the menupath separated and closed by ';'"
  message "example: Applications;Editors;foobar;"
  read "DTFILE_MENUPATH"

  query_msg "Please enter the name of the icon, if it has one:"
  read "DTFILE_ICON"

  query "Does this app need to be started in an xterm?" "n" && DTFILE_TERM="True"
fi
}

##
## @Globals SPELL_NAME SPELL_SHORT_DESCRIPTION DTFILE_MENUENTRY SPELL_VERSION
## @Globals  DTFILE_EXEC DTFILE_ICON DTFILE_MENUPATH DTFILE_TERM
add_desktop_file() {
  mkdir -p ${QUILL_SPELL_DIR}/${SPELL_NAME}/desktop
  cd ${QUILL_SPELL_DIR}/${SPELL_NAME}/desktop
  echo "[Desktop Entry]" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Encoding=UTF-8" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Version=1.0" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Name=${DTFILE_MENUENTRY}" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Type=Application" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Comment=${SPELL_SHORT_DESCRIPTION}" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Exec=${DTFILE_EXEC}" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Icon=${DTFILE_ICON}" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Categories=${DTFILE_MENUPATH}" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  echo "Term=${DTFILE_TERM}" >> ${QUILL_SPELL_DIR}/${SPELL_NAME}/${SPELL_NAME}.desktop
  cd ..
}
